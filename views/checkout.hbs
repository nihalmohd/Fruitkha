	<script>
		 function checkOutverify() {
            var fullname = document.checkout.fullname.value;
            var lastname = document.checkout.lastname.value;
            var email = document.checkout.email.value;
            var address = document.checkout.address.value;
            var phone = document.checkout.phone.value;
            var pincode = document.checkout.pincode.value;
            var state = document.checkout.state.value;
			var city = document.checkout.city.value;
			var town = document.checkout.town.value;
			var paymentmethod=document.checkout.payment.value;
			 const emailregx = /^(\w){3,16}@([A-Za-z]){5,8}.([A-Za-z]){2,3}$/gm
            let addressfeilds = document.getElementsByClassName("text-danger text-center w-100")
            if (fullname == "" && lastname == "" && email == "" && address == "" && phone == "" && pincode == "" && state == ""&& city == ""&& town == "") {
                let i = 0
                while (i < addressfeilds.length) {
                    addressfeilds[i].innerHTML = "This Feild Is Required"
                    i++
                }
                return false
            }
            if (fullname == "") {
                addressfeilds[0].innerHTML = "Fullname Is Required"
                return false;
            }else if (fullname.length < 5) {
                addressfeilds[0].innerHTML = "Fullname Atleast 5 charectors"
                return false;
            }else if (fullname.length < 5) {
                addressfeilds[0].innerHTML = "Fullname Atleast 5 charectors"
                return false;
            }else if (lastname == "") {
                addressfeilds[1].innerHTML = "Lastname Is Required"
                return false;
            }else  if (lastname.length < 5) {
                addressfeilds[1].innerHTML = "Lastname Atleast 5 charectors"
                return false;
            }else   if (email == "") {
                addressfeilds[2].innerHTML = "Email Is Required"
                return false;
            }else if (email.length < 5) {
                addressfeilds[2].innerHTML = "Email Atleast 5 charectors"
                return false;	
            }else if (emailregx.test(email)==false) {
                addressfeilds[2].innerHTML = "Email Is Invalied Format"
                return false;
            }else if (address == "") {
                addressfeilds[3].innerHTML = "Address Is Required"
                return false;
            }else if (address.length < 5){
                addressfeilds[3].innerHTML = "Address Atleat 5 charectors"
                return false;
            }else if (phone == "") {
                addressfeilds[4].innerHTML = "Phone Is Required"
                return false;
            }else if (phone.length < 10){
                addressfeilds[4].innerHTML = "Phone Number is Must 10 charectors"
                return false;
            }else if (pincode == "") {
                addressfeilds[5].innerHTML = "Pincode is Required"
                return false;
            }else if (pincode.length <6){
                addressfeilds[5].innerHTML = "Pincode Atleast 6 charector"
                return false;
            }else if (state == "") {
                addressfeilds[6].innerHTML = "State Is Required"
                return false;
            }else if (state.length <3){
                addressfeilds[6].innerHTML = "State Atleast 3 Charector"
                return false;
            }else if (city == "") {
                addressfeilds[7].innerHTML = "City is Required"
                return false;
            }else if (city.length <3){
                addressfeilds[7].innerHTML = "City is Atleast 3 charector"
                return false;
            }else if (town == "") {
                addressfeilds[8].innerHTML = "Town Is Required"
                return false;
            }else if (town.length <3){
                addressfeilds[8].innerHTML = "Town Atleast 3 Charector"
                return false;
            }else if (paymentmethod == "") {
                addressfeilds[9].innerHTML = "Please Select a Payment Method"
                return false;
            }else{
				$("#checkout").submit((e) => {
			e.preventDefault()
			$.ajax({
				url: '/place-order',
				method: 'post',
				data: $('#checkout').serialize(),
				success: (response) => {
					if (response.codSuccess) {
						location.href = "/orderSuccess"
					}else{
						razorpayPayment(response)
					}
				}
			})
		})
		return false;
			}
			return false;
        }

