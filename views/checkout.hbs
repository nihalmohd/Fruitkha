		function verifyPayment(payment,order) {
			$.ajax({
				url: "/verify-payment",
				data: {
					payment,
					order
				},
				method:"post",
				success:(response)=>{
					if(response.status){
						location.href='/orderSuccess'
					}else{
						alert('Payment Failed')
					}
				}
			})
		}
