    <script>
        function coupon() {
            var coupencode = document.couponform.coupencode.value;
            var discountvalue = document.couponform.discountvalue.value;
            var createdate = document.couponform.createdate.value;
            var minpurchese = document.couponform.minpurchese.value;
            var expiredate = document.couponform.expiredate.value;
            var discounttype = document.couponform.discounttype.value;
            var maxamount = document.couponform.maxamount.value;
            let couponfeilds = document.getElementsByClassName("text-danger w-100")
            if (coupencode == "" && discountvalue == "" && createdate == "" && minpurchese == "" && expiredate == "" && discounttype == "" && maxamount == "") {
                let i = 0
                while (i < couponfeilds.length) {
                    couponfeilds[i].innerHTML = "This Feild Is Required"
                    i++
                }
                return false
            }
            if (coupencode == "") {
                couponfeilds[0].innerHTML = "Coupon Code Title Is Required"
                return false;
            }
            if (coupencode.length < 5) {
                couponfeilds[0].innerHTML = "Coupon code Atleast 5 charectors"
                return false;
            }
            if (discountvalue == "") {
                couponfeilds[1].innerHTML = "Discount Value Is Required"
                return false;
            }
            if (discountvalue.length < 3) {
                couponfeilds[1].innerHTML = "Discount Value Atleast 3 charectors"
                return false;
            }
             if (createdate=="") {
                couponfeilds[2].innerHTML = "Date Is Required"
                return false;
            }
            if (minpurchese=="") {
                couponfeilds[3].innerHTML = "Minimum Purchase Amount Is Required"
                return false;
            }if (minpurchese.length<3) {
                couponfeilds[3].innerHTML = "Minimum Purchase Amount Atleast 3 charectors"
                return false;
            }
            if (expiredate=="") {
                couponfeilds[4].innerHTML = "Expaire Date IS Required"
                return false;
            }if (discounttype=="") {
                couponfeilds[5].innerHTML = "Please Select Any Field"
                return false;
            }if (maxamount=="") {
                couponfeilds[6].innerHTML = "Max Amount Is Required"
                return false;
            }
           if (maxamount.length<3) {
                couponfeilds[6].innerHTML = "Max Amount Atleast 3 charectors"
                return false;
            }

            return true
        }

        function displaycoupon() {
            const couponfeilds = document.getElementsByClassName("text-danger")
            let i = 0
            while (i < couponfeilds.length){
                couponfeilds[i].innerHTML = ""
                i++
            }
        }

    </script>

